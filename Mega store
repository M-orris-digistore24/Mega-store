  <nav>
    <input type="text" id="search-input" placeholder="Search products..." onkeyup="combinedFilter()" />
    <button onclick="changeCategory('all')">All</button>
    <button onclick="changeCategory('fitness')">Fitness</button>
    <button onclick="changeCategory('crypto')">Crypto</button>
    <button onclick="changeCategory('business')">Business</button>
    <button onclick="changeCategory('software')">Software</button>
